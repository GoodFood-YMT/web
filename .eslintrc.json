{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "next",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    "build/",
    "tailwind.config.ts"
  ],
  "plugins": ["@typescript-eslint"]
}
